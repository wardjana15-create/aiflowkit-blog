---
import { getCollection } from 'astro:content';
const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>AI FlowKit Blog</title>
    <style>
      body {
        font-family: system-ui, sans-serif;
        line-height: 1.6;
        margin: 0 auto;
        padding: 2rem;
        max-width: 800px;
        background-color: #f9f9f9;
        color: #333;
      }
      h1 {
        color: #111;
        text-align: center;
        margin-bottom: 3rem;
      }
      ul {
        list-style-type: none;
        padding: 0;
      }
      li {
        margin-bottom: 1.5rem;
        border: 1px solid #ddd;
        padding: 1rem;
        border-radius: 8px;
        background-color: #fff;
      }
      a {
        text-decoration: none;
        color: #333;
      }
      h2 {
        margin: 0 0 0.5rem 0;
        color: #007bff;
      }
      p {
        margin: 0;
        color: #666;
      }
    </style>
  </head>
  <body>
    <h1>AI FlowKit Blog</h1>
    <p style="text-align: center; max-width: 600px; margin: 0 auto 3rem auto;">
      Welcome to the blog. Here we explore the best AI-powered tools to boost your personal productivity.
    </p>
    <ul>
      {posts.map((post) => (
        <li>
          <a href={`/posts/${post.slug}/`}>
            <h2>{post.data.title}</h2>
            <p>Published on: {post.data.pubDate}</p>
          </a>
        </li>
      ))}
    </ul>
  </body>
</html>
