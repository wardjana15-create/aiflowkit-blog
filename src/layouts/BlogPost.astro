---
const { frontmatter } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{frontmatter.title}</title>
    <style>
      body {
        font-family: system-ui, sans-serif;
        line-height: 1.6;
        margin: 0 auto;
        padding: 2rem;
        max-width: 800px;
        background-color: #f9f9f9;
        color: #333;
      }
      h1, h2, h3 {
        color: #111;
      }
      a {
        color: #007bff;
        text-decoration: none;
      }
      a:hover {
        text-decoration: underline;
      }
      .back-link {
        display: block;
        margin-bottom: 2rem;
        font-weight: bold;
      }
    </style>
  </head>
  <body>
    <a href="/" class="back-link">&larr; Back to Blog Home</a>
    <h1>{frontmatter.title}</h1>
    <p>Published on: {frontmatter.pubDate}</p>
    <hr>
    <slot />
  </body>
    <footer>
      <hr>
      <nav>
        <a href="/about">About</a> | 
        <a href="/contact">Contact</a> | 
        <a href="/privacy-policy">Privacy Policy</a>
      </nav>
      <p>&copy; 2025 AI FlowKit. All rights reserved.</p>
    </footer>
    <style>
      footer {
        text-align: center;
        margin-top: 4rem;
        padding-top: 2rem;
        border-top: 1px solid #ddd;
        color: #666;
      }
      footer nav a {
        margin: 0 10px;
      }
    </style>

</html>
